<resources>

    <!-- Base application theme. <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Main theme colors -->
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/dark_primary_color</item>
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>


    </style>

</resources>
